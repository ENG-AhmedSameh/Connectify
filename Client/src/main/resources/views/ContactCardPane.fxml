<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane onMousePressed="#paneOnClicked"
            style="-fx-background-color: #374754;"
            styleClass="chat-HBox" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.connectify.controller.ContactCardController">
    <children>
        <HBox fx:id="messageHBox" alignment="CENTER_LEFT" mouseTransparent="true" prefHeight="100.0" prefWidth="350.0">
            <children>
                <ImageView fx:id="contactPictureImageView" fitHeight="96.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/person.png" />
                    </image>
                    <clip>
                        <Circle fx:id="imageProfileClip" centerX="40" centerY="40" radius="40" />
                    </clip>
                    <HBox.margin>
                        <Insets right="20.0" top="15.0" />
                    </HBox.margin>
                </ImageView>
                <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="309.0" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="contactNameTextField" prefHeight="27.0" prefWidth="182.0" text="Friend Name" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lastMessageTimeLabel" prefHeight="18.0" prefWidth="73.0" text="12:00 AM" textFill="#597081" />
                            </children>
                        </HBox>
                        <HBox>
                            <children>
                                <Label fx:id="lastMessageLabel" prefHeight="18.0" prefWidth="200.0" text="Hey..I'm using Whasapp" textFill="WHITE" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
