<AnchorPane fx:id="editeProfilePane" prefHeight="500.0" prefWidth="500.0" styleClass="anchor-pane" stylesheets="@../styles/Profile.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.connectify.controller.ProfileEditorController">
