<AnchorPane fx:id="signUpPane" prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: #17212b;" styleClass="signUP-anchor-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.connectify.controller.ImageBioController">
    <children>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="350.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Circle fx:id="profileImage" blendMode="SCREEN" fill="WHITE" layoutX="150.0" layoutY="100.0" radius="57.0" stroke="#949494" strokeType="INSIDE" strokeWidth="0.0" VBox.vgrow="NEVER">
                    <cursor>
                        <Cursor fx:constant="HAND" /></cursor>
                    <VBox.margin>
                        <Insets bottom="20.0" top="10.0" />
                    </VBox.margin>
                </Circle>
                <Button contentDisplay="CENTER" minHeight="32.0" onAction="#chooseProfileHandler" prefHeight="32.0" prefWidth="170.0" style="-fx-background-color: #2f6ea5;" text="Choose Group Profile" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS" wrapText="true" VBox.vgrow="NEVER">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
            <TextField promptText="Enter Group Name" style="-fx-background-color: #1a283b;">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField promptText="Enter Description" style="-fx-background-color: #1a283b;">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Button contentDisplay="CENTER" minHeight="26.0" onAction="#chooseProfileHandler" prefHeight="26.0" prefWidth="118.0" style="-fx-background-color: #2f6ea5;" text="Back" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS" wrapText="true">
                          <cursor>
                              <Cursor fx:constant="HAND" />
                          </cursor>
                          <font>
                              <Font size="14.0" />
                          </font>
                      </Button>
                   <Button contentDisplay="CENTER" minHeight="26.0" onAction="#chooseProfileHandler" prefHeight="26.0" prefWidth="118.0" style="-fx-background-color: #2f6ea5;" text="Finish" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS" wrapText="true">
                       <cursor>
                           <Cursor fx:constant="HAND" />
                       </cursor>
                       <font>
                           <Font size="14.0" />
                       </font>
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                   </Button>
               </children>
            </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
