<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="titleBarHBox" alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="750.0" styleClass="tool-bar" stylesheets="@../styles/SignUp.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.connectify.controller.titleBarController">
   <cursor>
      <Cursor fx:constant="MOVE" />
   </cursor>
   <children>
      <HBox alignment="CENTER_LEFT" HBox.hgrow="NEVER">
         <children>
            <Label prefHeight="18.0" prefWidth="738.0" styleClass="text-field" stylesheets="@../styles/SignUp.css" text="Connectify" />
         </children>
      </HBox>
      <ImageView fx:id="minimizeButton" fitHeight="30.0" fitWidth="30.0" nodeOrientation="RIGHT_TO_LEFT" onMouseClicked="#minimizeButtonHandler" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/minimize.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </ImageView>
      <ImageView fx:id="closeButton" fitHeight="30.0" fitWidth="30.0" nodeOrientation="RIGHT_TO_LEFT" onMouseClicked="#closeButtonHandler" pickOnBounds="true" preserveRatio="true" styleClass="bar-button">
         <image>
            <Image url="@../images/exit.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </ImageView>
   </children>
</HBox>
